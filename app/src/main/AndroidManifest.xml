<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telex">

    <application android:name=".App">
        <activity
            android:name="com.telex.base.presentation.home.LaunchActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
                <data android:host="edit.graph.org" />
                <data android:host="edit.telegra.ph" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${enableCrashlytics}" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="${enableAnalytics}" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2dcdfa4a6c153fa965c63348e2850867f2ece6fb" />

    </application>

</manifest>
